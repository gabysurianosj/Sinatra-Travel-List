<body class="content-bkgd-2">
  <div class="header-contents">
    <div class="text-center">
      <h1> All Experiences for <%= @category.name %></h1>
    </div>
  </div>

  <div class="row">
    <% @category.experiences.each do |exp| %>
      <div class="card" style="width: 15rem; margin: 20px">
        <div class="text-center">
          <div class="card-header"><a href="/experiences/<%= exp.id %>"><%= exp.description %></a></div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="text-right"><a class="btn btn-info" style="margin: 20px" href="/categories" role="button">< Back to All Categories</a></div>
</body>
