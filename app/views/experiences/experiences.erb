
<div class="header">
  <h1><%= @user.name %>'s Travel List</h1>
  <img src="img/header.jpg" alt="header" />
  <br>
</div>
  <% if @user.experiences.empty? %>
    <div class="text-center"><p>You don't have anything in your Travel List!</p>
    <p><a class="btn btn-success" style="margin: 20px" href="/experiences/new" role="button">Add a New Experience</a>
    or
    <a class="btn btn-warning" style="margin: 20px" href="/experiences/users" role="button">Get Inspiration from Others</a></p></div>
  <% else %>
  <div class="row">
    <a class="btn btn-success" style="margin: 20px" href="/experiences/new" role="button">+ Add New</a>
    <a class="btn btn-warning" style="margin: 20px" href="/experiences/users" role="button">Get Inspiration</a>
  </div>
    <% end %>

  <div class="row">
    <% @user.experiences.each do |e| %>
      <% country = Country.find(e.country_id) %>
        <div class="card" style="width: 15rem; margin: 20px">
          <div class="text-center">
            <div class="card-header"><a href='/experiences/<%= e.id %>'><%= e.description %></a></div>
            <div class="card-body" style="padding: 10px"><%= country.name %></div>
          </div>
        </div>
      <% end %>
  </div>
